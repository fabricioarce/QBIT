│   │   ├── daily_problem.rs      # Tarea programada diaria
│   │   └── scheduler.rs          # Sistema de tareas cron-like
│   │
│   └── utils/
│       ├── mod.rs
│       ├── embed_builder.rs      # Helpers para Discord embeds
│       ├── permissions.rs        # Verificación de permisos
│       └── error.rs              # Custom error types
